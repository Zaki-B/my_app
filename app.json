{
  "expo": {
    "name": "BeKind",
    "slug": "bekind",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bekind.app",
      "config": {
        "googleMapsApiKey": "VOTRE_CLE_API_IOS"
      }
    },
    "android": {
      "package": "com.bekind.app",
      "config": {
        "googleMaps": {
          "apiKey": "VOTRE_CLE_API_ANDROID"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow BeKind to use your location."
        }
      ]
    ]
  }
} 